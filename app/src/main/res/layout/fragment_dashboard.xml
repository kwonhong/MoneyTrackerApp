<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventContainer"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="20dp"
    android:background="@drawable/card_background_white"
    android:minHeight="200dp"
    android:orientation="vertical">

    <ysdesigns.moneytrackerapp.Font.RobotoTextView
        style="@style/TextViewAppearance.Headline1"
        android:paddingBottom="0dp"
        android:paddingTop="20dp"
        android:text="All"
        android:textColor="@color/material_green_500" />

    <ysdesigns.moneytrackerapp.Font.RobotoTextView
        style="@style/TextViewAppearance.Caption1"
        android:paddingTop="0dp"
        android:text="Showing all transactions" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ysdesigns.moneytrackerapp.Font.RobotoTextView
                style="@style/TextViewAppearance.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:text="Incomes" />

            <ysdesigns.moneytrackerapp.Font.RobotoTextView
                style="@style/TextViewAppearance.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="0dp"
                android:text="\u20A9 44,000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ysdesigns.moneytrackerapp.Font.RobotoTextView
                style="@style/TextViewAppearance.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:text="Expenses" />

            <ysdesigns.moneytrackerapp.Font.RobotoTextView
                style="@style/TextViewAppearance.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="0dp"
                android:text="\u20A9 34,000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ysdesigns.moneytrackerapp.Font.RobotoTextView
                style="@style/TextViewAppearance.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:text="Balance"/>

            <ysdesigns.moneytrackerapp.Font.RobotoTextView
                style="@style/TextViewAppearance.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:text="\u20A9 10,000"/>

        </LinearLayout>


    </LinearLayout>

    <!--<ysdesigns.moneytrackerapp.Views.AnimatedExpandableListView-->
        <!--android:id="@+id/list_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/white"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:paddingRight="10dp"-->
        <!--android:paddingBottom="10dp" />-->


</LinearLayout>