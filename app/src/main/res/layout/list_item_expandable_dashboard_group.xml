<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_yellow_400"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <ysdesigns.moneytrackerapp.Font.RobotoTextView
                    style="@style/TextViewAppearance.Headline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sept 19, 2015"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <ysdesigns.moneytrackerapp.Font.RobotoTextView
                        style="@style/TextViewAppearance.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingRight="0dp"
                        android:text="Income:"
                        android:textColor="@color/white" />

                    <ysdesigns.moneytrackerapp.Font.RobotoTextView
                        style="@style/TextViewAppearance.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingLeft="10dp"
                        android:text="\u20A9 44,000" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <ysdesigns.moneytrackerapp.Font.RobotoTextView
                        style="@style/TextViewAppearance.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:text="Expense:"
                        android:textColor="@color/white" />

                    <ysdesigns.moneytrackerapp.Font.RobotoTextView
                        style="@style/TextViewAppearance.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:text="\u20A9 44,000" />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</LinearLayout>