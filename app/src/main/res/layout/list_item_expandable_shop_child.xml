<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@null" />

    <RelativeLayout
        android:id="@+id/list_item_expandable_shop_child_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/abc_btn_radio_to_on_mtrl_015"/>

        <ysdesigns.moneytrackerapp.Font.RobotoTextView
            style="@style/TextViewAppearance.Body2"
            android:id="@+id/list_item_expandable_shop_child_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imageView"
            android:maxLines="1"
            android:gravity="center"
            android:text="PAY WITH PAYPAL"
            android:textColor="@color/main_color_grey_900"/>

        <ysdesigns.moneytrackerapp.Font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/list_item_expandable_shop_child_icon"
            android:gravity="center"
            android:text="\u20A9 44,000"/>

        <ysdesigns.moneytrackerapp.Font.MaterialDesignIconsTextView
            android:id="@+id/list_item_expandable_shop_child_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:text="@string/material_icon_to_left"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>